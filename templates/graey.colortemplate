; :help group-name
String               -> Literal
Character            -> Literal
Number               -> Literal
Boolean              -> Literal
Float                -> Literal
Function             -> Identifier
Conditional          -> Statement
Repeat               -> Statement
Operator             -> Statement
Keyword              -> Statement
Exception            -> Statement
Include              -> PreProc
Define               -> PreProc
PreCondit            -> PreProc
StorageClass         -> Statement
Structure            -> Statement
Typedef              -> Statement
SpecialChar          -> Special
Tag                  -> Special
Debug                -> Special

; :help highlight-groups
FloatBorder          -> NormalFloat
MessageWindow        -> Pmenu
PopupNotification    -> Todo
StatusLineTerm       -> StatusLine
StatusLineTermNC     -> StatusLineNC
Terminal             -> Normal
VertSplit            -> WinSeparator

; :help lCursor
lCursor              -> Cursor

; nvim treesitter {{{
; https://github.com/nvim-treesitter/nvim-treesitter/blob/f5062ebc8d5c0542465c6e2432d6cd544a92f348/CONTRIBUTING.md
; See also :h treesitter-highlight-groups
#if has('nvim-0.8')
  ; identifiers
  @variable          -> Identifier
  @variable.builtin  -> Constant
  ; @variable.parameter
  @variable.parameter.builtin -> Constant
  ; @variable.member
  ; @constant
  @constant.builtin  -> Constant
  @constant.macro    -> Constant
  @module            -> Identifier
  @module.builtin    -> Constant
  ; @label

  ; literals
  ; @string
  ; @string.documentation
  ; @string.regexp
  ; @string.escape
  ; @string.special
  ; @string.special.symbol
  ; @string.special.url
  ; @string.special.path
  ; @character
  ; @character.special
  ; @boolean
  ; @number
  ; @number.float

  ; types
  ; @type
  @type.builtin      -> Constant
  @type.definition   -> Label
  @attribute         -> Special
  ; @attribute.builtin
  ; @property

  ; functions
  @function          -> Label
  @function.builtin  -> Constant
  @function.call     -> Identifier
  @function.macro    -> Macro
  @function.method   -> Label
  @function.method.call -> Identifier
  ; NOTE: @function.latex is used for both invocation and defintion. https://github.com/nvim-treesitter/nvim-treesitter/pull/3959#pullrequestreview-1218830075
  @function.latex    -> Constant
  @constructor       -> Identifier
  ; @operator

  ; keywords
  ; @keyword
  ; @keyword.coroutine
  ; @keyword.function
  ; @keyword.operator
  ; @keyword.import
  ; @keyword.type
  ; @keyword.modifier
  ; @keyword.repeat
  ; @keyword.return
  ; @keyword.debug
  ; @keyword.exception
  ; @keyword.conditional
  ; @keyword.conditional.ternary
  ; @keyword.directive
  ; @keyword.directive.define

  ; punctuation
  ; @punctuation.delimiter
  ; @punctuation.bracket
  @punctuation.special -> PunctuationSpecial

  ; comments
  ; @comment
  ; @comment.documentation
  ; @comment.error
  ; @comment.warning
  ; @comment.todo
  ; @comment.note

  ; markup
  @markup.strong     -> Bold
  @markup.italic     -> Italic
  @markup.strikethrough -> Strikethrough
  @markup.underline  -> Underlined
  @markup.heading    -> Title
  @markup.quote      -> NONE
  @markup.math       -> Literal
  @markup.link       -> Underlined
  ; @markup.link.label
  ; @markup.link.url
  ; NOTE: using bg for non-UI is bad because bg can change e.g. floating window, diff mode, ...
  @markup.raw        -> NormalFloat
  ; @markup.raw.block
  @markup.list       -> PunctuationSpecial
  ; @markup.list.checked
  ; @markup.list.unchecked

  ; @diff.plus
  ; @diff.minus
  ; @diff.delta

  @tag               -> Statement
  ; @tag.builtin
  @tag.attribute     -> Identifier
  ; @tag.delimiter
#endif
; }}}
