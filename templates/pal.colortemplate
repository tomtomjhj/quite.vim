; Global definitions {{{
; :help group-name
Character            -> String
Number               -> String
Boolean              -> String
Float                -> String
Operator             -> Statement
StorageClass         -> Statement
Structure            -> Statement
Typedef              -> Statement

; :help highlight-groups
FloatBorder          -> NormalFloat
; vim uses SpecialKey for listchar
#if has('nvim')
  SpecialKey         -> Special
#else
  SpecialKey         -> NonText
#endif
Terminal             -> Normal
StatusLineTerm       -> StatusLine
StatusLineTermNC     -> StatusLineNC

; nvim treesitter {{{
; https://github.com/nvim-treesitter/nvim-treesitter/blob/cc908cfcd7258b2e5c1a9c583e2f3feda0caf23b/CONTRIBUTING.md
; See also :h treesitter-highlight-groups
#if has('nvim-0.8')
  ; identifiers
  ; @variable
  @variable.builtin  -> @variable
  ; @variable.parameter
  ; @variable.member
  ; @constant
  @constant.builtin  -> Constant
  ; @constant.macro
  @module            -> NONE
  @module.builtin    -> Constant
  ; @label

  ; literals
  ; @string
  ; @string.documentation
  ; @string.regexp
  ; @string.escape
  ; @string.special
  ; @string.special.symbol
  ; @string.special.url
  ; @string.special.path
  ; @character
  ; @character.special
  ; @boolean
  ; @number
  ; @number.float

  ; types
  ; @type
  @type.builtin      -> Constant
  @type.definition   -> Type
  @attribute         -> Macro
  @attribute.builtin -> Macro
  ; @property

  ; functions
  ; @function
  ; @function.builtin
  ; @function.call
  @function.macro    -> Macro
  ; @function.method
  ; @function.method.call
  @constructor       -> Function
  ; @operator

  ; keywords
  ; @keyword
  ; @keyword.coroutine
  ; @keyword.function
  ; @keyword.operator
  ; @keyword.import
  ; @keyword.type
  ; @keyword.modifier
  ; @keyword.repeat
  ; @keyword.return
  ; @keyword.debug
  ; @keyword.exception
  ; @keyword.conditional
  ; @keyword.conditional.ternary
  ; @keyword.directive
  ; @keyword.directive.define

  ; punctuation
  ; @punctuation.delimiter
  ; @punctuation.bracket
  @punctuation.special -> Special

  ; comments
  ; @comment
  ; @comment.documentation
  ; @comment.error
  ; @comment.warning
  ; @comment.todo
  ; @comment.note

  ; markup
  verbatim
  hi @markup.strong        ctermfg=NONE ctermbg=NONE cterm=bold guifg=NONE guibg=NONE gui=bold
  hi @markup.italic        ctermfg=NONE ctermbg=NONE cterm=italic guifg=NONE guibg=NONE gui=italic
  hi @markup.strikethrough ctermfg=NONE ctermbg=NONE cterm=strikethrough guifg=NONE guibg=NONE gui=strikethrough
  endverbatim
  @markup.underline  -> Underlined
  @markup.heading    -> Title
  @markup.quote      -> NONE
  @markup.math       -> String
  ; @markup.environment
  @markup.link       -> Underlined
  ; @markup.link.label
  ; @markup.link.url
  @markup.raw        -> String
  @markup.raw.block  -> NONE
  @markup.list       -> Stat
  ; @markup.list.checked
  ; @markup.list.unchecked

  ; @diff.plus
  ; @diff.minus
  ; @diff.delta

  @tag               -> Statement
  @tag.attribute     -> NONE
  ; @tag.delimiter
#endif
; }}}
; :h lsp-lighlight {{{
LspCodeLens          -> NonText
LspCodeLensSeparator -> NonText
; }}}
; plugins and filetypes {{{
diffAdded            -> Added
diffRemoved          -> Removed
; Coq: {{{
coqKwd               -> Keyword
coqProofDelim        -> PreProc
; }}}
; Help: {{{
helpHyperTextJump    -> Underlined
helpOption           -> Underlined
; }}}
; Markdown: {{{
markdownCode         -> String
; }}}
; Tex: {{{
texMathZone          -> NONE
texRefArg            -> NONE
texMathEnvArgName    -> PreProc
texMathDelimZone     -> PreProc
texPartArgTitle      -> Title
texTitleArg          -> Title
; }}}
; }}}
; }}}

; Background: dark {{{
Background: dark

; Not using the named colors, because the actual meaning depends on t_Co (e.g. darkgrey is 242 t_Co=256).
Color: term0         none              ~
Color: term7         none              ~
Color: term15        none              ~
; Error DiffDelete diffRemoved SpellBad
; ~~Constant~~
Color: term1         #d7005f           1                 1  ; darkred
; DiffAdd diffAdded
; String
Color: term2         #22bf00           2                 2  ; darkgreen
; IncSearch ~~Conceal~~
; 8: Visual NonText
; >16: Comment
Color: term3         #d79600           3                 3  ; darkyellow
; DiffChange SpellCap
; Statement, Title, Directory
Color: term4         #0080dd           4                 4  ; darkblue
; DiffText QuickFixLine CurSearch SpellLocal
; Function
Color: term5         #d777d7           5                 5  ; darkmagenta
; [x] Search SpellRare
; PreProc
Color: term6         #00cccc           6                 6  ; darkcyan
; Can't assume about relation between 1,7,15 and bg/fg,
; but it's clear that 8 will have some contrast with all of them.
; >16: Visual NonText
Color: term8         #808080           8                 8  ; darkgrey
; not used
Color: term9         #ff2266           9                 9  ; red
Color: term10        #55ff00           10                10 ; green
Color: term11        #ffaf00           11                11 ; yellow
Color: term12        #5fafff           12                12 ; blue
Color: term13        #ff87ff           13                13 ; magenta
Color: term14        #00eeff           14                14 ; cyan

Include: pal-common
; }}}

